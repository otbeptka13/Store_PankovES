                    </div>
                </div><!-- /.container -->
            </div><!-- /.copyright-bar -->
        </footer><!-- /#footer -->
        <!-- ============================================================= FOOTER : END ============================================================= -->
    </div><!-- /.wrapper -->   <!-- JavaScripts placed at the end of the document so the pages load faster -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/Content/js/bootstrap")
